{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist/electron",
    "target": "ES2020",
    "module": "commonjs",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["electron/**/*", "shared/**/*.ts"],
  "exclude": ["src/**/*", "**/*.tsx"]
}
