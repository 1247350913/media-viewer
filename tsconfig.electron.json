{
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "sourceMap": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "electron",
    "outDir": "dist/electron",
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["electron/**/*"],
  "references": [{ "path": "./tsconfig.shared.json" }]
}